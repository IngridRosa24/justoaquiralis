<div class=registroNaranja>

  <h2>Iniciar Sesi√≥n</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs" style="background-color:white; color:black; width: 50%; margin: auto; padding:15px;">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions text-center" style="margin:auto; margin-top:25px;">
      <%= f.button :submit, "Log in", class:"botonAzul" %>
    </div>
  <% end %>

  <%= render "buyers/shared/links" %>
</div>
